                    //    url: "/../../../../api/UserEntities/UpsertProfilePic",
                    //    data: data,
                    //    processData: false,
                    //    contentType: false,
                    //    type: "POST",
                    //    success: function (data) {
                    //        alert("Files Uploaded!");
                    //    }
                    //}
                    //);
                }
            }
</script>

        <partial name="_ValidationScriptsPartial" />
    }
